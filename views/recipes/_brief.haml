.card-container
    .card
        .img-wrapper
            %img.card-image{ :src => recipe.image_url }
            %button.bookmark-btn.save-recipe{ :title => "Bookmark", :data => { :recipeid => recipe.id } }
                %img{ :src => "/bookmark#{"-fill" if is_saved?(recipe.id)}.svg" }
        .card-content
            .card-title= recipe.title
            .card-subtitle
                .card-subtitle-box
                    %img.icon{ :src => "/time.svg" }
                    = recipe.time + " min"
                .card-subtitle-box
                    %img.icon{ :src => "/#{recipe.difficulty}.svg" }
                    = difficulty_display(recipe.difficulty)
            .card-btn-row
                %button.card-btn.card-btn--primary{ :title => "Mer information" } Mer info
                %a.card-btn.card-btn--primary{ :title => "LÃ¤s hela receptet", :href => recipe.url }
                    = recipe.site_name 
                    %img{ :src => "/external-link.svg" }
