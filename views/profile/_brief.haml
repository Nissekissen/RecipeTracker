.profile-brief
    %img.avatar{ :src => @user.avatar_url }
    %p
        = @user.name
        %img.arrow{ :src => "/assets/svg/arrow_down.svg"}
    .profile-brief-dropdown
        %a{ :href => "/profile/#{@user.id}" }
            Min profil
            %img{ :src => "/assets/svg/user.svg", :alt => "Profil", :width => "32px" }
        %a{ :href => "/profile/#{@user.id}/bookmarks" }
            Sparade recept
            %img{ :src => "/assets/svg/recipe.svg", :alt => "Recept", :width => "32px" }
        %a{ :href => "/profile/#{@user.id}/groups" }
            Mina grupper
            %img{ :src => "/assets/svg/group.svg", :alt => "Grupper", :width => "32px" }
        %a{ :href => "/profile/#{@user.id}/settings" }
            Inställningar
            %img{ :src => "/assets/svg/settings.svg", :alt => "Inställningar", :width => "32px" }
        %a{ :href => "/logout" }
            Logga ut
            %img{ :src => "/assets/svg/logout.svg", :alt => "Logga ut", :width => "32px" }
    