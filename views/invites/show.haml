- content_for :head do
    %title Receptbasen - Inbjudan till grupp
    %meta{ :property => "og:title", :content => "Receptbasen - Inbjudan till grupp" }

.container
    .corners
        %img.corner{ :src => "/assets/svg/corner.svg" }
        %img.corner{ :src => "/assets/svg/corner.svg" }
        %img.corner{ :src => "/assets/svg/corner.svg" }
        %img.corner{ :src => "/assets/svg/corner.svg" }
    - if @error
        .info-group
            %img{ :src => '/gray.png' }
            %p.invite-text Fråga ägaren om en ny
            %h2.group-name Ogiltig inbjudan
        %a.btn.btn--primary{ :title => "Tillbaka till startsidan", :href => "/" } Tillbaka till startsidan
