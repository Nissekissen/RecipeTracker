- content_for :head do
    %title= "Receptbasen - Inbjudningslänkar"
    %meta{ :property => "og:title", :content => "Receptbasen - Inbjudningslänkar" }

%h2.page-title Inbjudningslänkar

- if @invites.any?
    %table
        %thead
            %tr
                %th Länk
                %th Går ut
                %th Användningar kvar
                %th Skapad av
        %tbody
            - @invites.each do |invite|
                %tr
                    %td= "https://localhost:9292/invite/#{invite.token}"
                    %td= invite.expires_at
                    %td= invite.uses_left
                    %td= invite.user.name

%form{ :method => "get", :action => "/invites/new" }
    %input{ :type => "hidden", :name => "group_id", :value => @group.id }
    %input{ :type => "submit", :value => "Skapa inbjudningslänk" }