- content_for :head do
    %title= "Receptbasen - #{@group.name}"
    %meta{ :property => "og:title", :content => "Receptbasen - #{@group.name}" }
    %meta{ :property => "og:type", :content => "website" }
    %meta{ :property => "og:url", :content => "https://receptbasen.se/groups/#{@group.name}" }

%h2.page-title= @group.name
%div.group-description= @group.description

%a{ :href => "/groups/#{@group.id}/members"} Visa medlemmar

%a{ :href => "/invites/new?group_id=#{@group.id}"} Bjud in medlemmar

%a{ :href => "/groups/#{@group.id}/invites"} Visa inbjudningslänkar

- if @is_member
    %form{ :method => "post", :action => "/groups/#{@group.id}/leave"}
        %input{ :type => "submit", :value => "Lämna" }
- else
    %form{ :method => "post", :action => "/groups/#{@group.id}/join"}
        %input{ :type => "submit", :value => "Gå med" }

